@using GYM93.Models.ViewModels
@model AppUser

@{
    ViewData["Title"] = "Chỉnh Sửa Tài Khoản Nhân Viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Chỉnh Sửa Tài Khoản Nhân Viên</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <!-- Thêm một trường hidden để lưu trữ Id của nhân viên nếu cần thiết -->
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-5">
                            <label asp-for="UserName" class="form-label">Tên Đăng Nhập</label>
                            <input asp-for="UserName" class="form-control" style="width : 30%" readonly />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và Tên</label>
                            <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số Điện Thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                     @*    <div class="form-group">

                            <input asp-for="Image" class="form-label" style="display:none" id="fileInput" onchange="previewImage(event)" />
                            <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                             
                            </button>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div> *@

                        <div class="form-group">
                            <input asp-for="Image" type="file" class="form-label" id="fileInput" style="display:none" onchange="previewImage(event)" />
                            <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                                Thay Hình Ảnh Khác
                            </button>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">Lưu Thay Đổi</button>
                            <a href="@Url.Action("EmployeeAccounts")" class="btn btn-secondary btn-block">Hủy</a>
                        </div>
                    </form>
                    <!-- Image preview container -->
                    <div id="imagePreview" class="image-preview-container">
                        <!-- Placeholder for the image -->
                        <img src="/@Model.HinhAnhTv" id="preview" alt="Hình Ảnh Thành Viên Gym93" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="~/template/css/avatar.css" rel="stylesheet" />

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
