@using GYM93.Models.ViewModels
@model AppUser

@{
    ViewData["Title"] = "Xác Nhận Xóa Tài Khoản Nhân Viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Xác Nhận Xóa Tài Khoản Nhân Viên</h3>
                </div>
                <div class="card-body">
                    <form asp-action="DeleteAccount" method="post">
                        <!-- Thêm một DeleteAccount hidden để lưu trữ Id của nhân viên -->
                        <input type="hidden" asp-for="UserName" />

                        <div class="mb-3">
                            <label class="form-label">Tên Đăng Nhập</label>
                            <p class="form-control-static">@Model.UserName</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Họ và Tên</label>
                            <p class="form-control-static">@Model.FullName</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <p class="form-control-static">@Model.Email</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số Điện Thoại</label>
                            <p class="form-control-static">@Model.PhoneNumber</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hình Ảnh</label>
                            <p class="form-control-static">@Model.HinhAnhTv</p>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-block">Xóa Tài Khoản</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
