@using GYM93.Models.ViewModels
@model AppUser

@{
    ViewData["Title"] = "Xác Nhận Xóa Tài Khoản Nhân Viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Xác Nhận Xóa Tài Khoản Nhân Viên</h3>
                </div>
                <div class="card-body">
                    <form asp-action="DeleteAccount" method="post">
                        <!-- Thêm một DeleteAccount hidden để lưu trữ Id của nhân viên -->
                        <input type="hidden" asp-for="UserName" />

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Tên Đăng Nhập:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext">@Model.UserName</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Họ và Tên:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Email:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Số Điện Thoại:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext">@Model.PhoneNumber</p>
                            </div>
                        </div>


                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-block">Xóa Tài Khoản</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">Hủy</a>
                        </div>
                    </form>
                    <!-- Image preview container -->
                    <div id="imagePreview" class="image-preview-container">
                        <!-- Placeholder for the image -->
                        <img src="/@Model.HinhAnhTv" id="preview" alt="Hình Ảnh Thành Viên Gym93" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="~/template/css/avatar.css" rel="stylesheet" />

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

