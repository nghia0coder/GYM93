@using GYM93.Models.ViewModels
@model ProfileViewModel

@{
    ViewData["Title"] = "Chi Tiết Tài Khoản Nhân Viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Chi Tiết Tài Khoản Nhân Viên</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Tên Đăng Nhập:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.UserName</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Họ và Tên:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.FullName</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Email:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Số Điện Thoại:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        </div>
                    </div>
                    <!-- Image preview container -->
                    <div id="imagePreview" class="image-preview-container">
                        <!-- Placeholder for the image -->
                        <img src="/@Model.HinhAnh" alt="Hình Ảnh Thành Viên Gym93" class="img-fluid" />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("EditProfile", new { id = Model.UserName })" class="btn btn-warning">Chỉnh Sửa</a>
                        <a href="@Url.Action("EmployeeAccounts")" class="btn btn-secondary">Quay Lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link href="~/template/css/avatar.css" rel="stylesheet" />

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}