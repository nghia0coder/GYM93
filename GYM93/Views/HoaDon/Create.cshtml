@model GYM93.Models.HoaDon

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo Hóa Đơn Mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThanhVienId" class="control-label"></label>
                <input id="searchThanhVien" type="text" class="form-control" placeholder="Tìm thành viên..." />
                <input type="hidden" asp-for="ThanhVienId" />
            </div>
            <div class="form-group">
                <label asp-for="ThangDangKy" class="control-label"></label>
                <input asp-for="ThangDangKy" class="form-control" />
                <span asp-validation-for="ThangDangKy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label"></label>
                <input id="tongTienInput"  class="form-control" />
                <input id="tongTienHidden" asp-for="TongTien" type="hidden" />
                <span id="validationMessage" asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Xác Nhận" class="btn btn-primary" />
            </div>
        
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở Về Danh Sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            $("#searchThanhVien").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("SearchThanhVien", "ThanhVien")',
                        data: { term: request.term },
                        success: function (data) {
                            console.log(data); // Xem dữ liệu trả về từ server
                            response($.map(data, function (item) {
                                return {
                                    label: item.Ten,
                                    value: item.ThanhVienId
                                };
                            }));
                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX Error:", status, error); // Xem lỗi nếu có
                        }
                    });
                },
                minLength: 1, // Tùy chọn
                delay: 300,   // Tùy chọn
                select: function (event, ui) {
                    $("#searchThanhVien").val(ui.item.label);
                    $("input[name='ThanhVienId']").val(ui.item.value);
                    return false;
                }
            });

        });


    </script>

}
